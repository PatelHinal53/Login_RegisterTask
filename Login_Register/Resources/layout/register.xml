<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRegister"
            android:text="@string/register"
            android:textSize="@dimen/textSize_35"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_60"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDon"
                    android:text="@string/donotAccount"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCre"
                    android:text="@string/creAccount"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="@color/red"/>
            </LinearLayout>
        
    
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextRegName"
            android:hint="@string/nameOfUser"
            android:drawableLeft="@drawable/ic_person"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:background="@drawable/shape2"
            android:drawablePadding="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginHorizontal="@dimen/dimen_40"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:id="@+id/editTextEmail"
            android:hint="@string/emailAddress"
            android:drawableLeft="@drawable/ic_email_2"
            android:imeOptions="actionNext"
            android:inputType="textWebEmailAddress"
            android:background="@drawable/shape2"
            android:drawablePadding="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:layout_marginHorizontal="@dimen/dimen_40"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:id="@+id/editTextUsername"
            android:hint="@string/usreName"
            android:drawableLeft="@drawable/ic_person"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:background="@drawable/shape2"
            android:drawablePadding="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:layout_marginHorizontal="@dimen/dimen_40"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:id="@+id/editTextPassword"
                android:hint="@string/password"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="@dimen/dimen15"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:background="@drawable/shape2"
                android:fontFamily="sans-serif"
                android:padding="@dimen/dimen15"
                android:layout_marginHorizontal="@dimen/dimen_40"/>
    
        
                <com.google.android.material.button.MaterialButton
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_50"
                    android:id="@+id/buttonRegisterB"
                    android:text="@string/registerButton"
                    app:cornerRadius="@dimen/dimen_50"
                    android:backgroundTint="@color/blue"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textSize_20"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:layout_gravity="center"
                />
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orRegisterWith"
                android:layout_gravity="center"
                android:id="@+id/textViewOrReg"
                android:textSize="@dimen/textSize_17"
                android:layout_marginTop="@dimen/dimen_30"/>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_20">
            
                <ImageView
                    android:layout_width="@dimen/dimen_65"
                    android:layout_height="@dimen/dimen_55"
                    android:src="@drawable/facebook"
                    android:id="@+id/imageViewFacebook1"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_width="@dimen/dimen_59"
                    android:layout_height="@dimen/dimen_57"
                    android:id="@+id/imageViewGoogle1"
                    android:src="@drawable/google"/>
        </LinearLayout>
    
</LinearLayout>
