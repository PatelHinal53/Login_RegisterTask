<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLogin"
            android:text="@string/login"
            android:textSize="@dimen/textSize_35"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_60"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/dimen_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDont"
                android:text="@string/donotAccount"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCreate"
                android:text="@string/creAccount"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textColor="@color/red"/>
        </LinearLayout>
    
       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserLogin"
            android:hint="@string/usreName"
            android:drawableLeft="@drawable/ic_person"
            android:layout_gravity="center_vertical"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:background="@drawable/shape2"
            android:drawablePadding="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:layout_marginTop="@dimen/dimen_85"
            android:layout_marginHorizontal="@dimen/dimen_40"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUserPass"
            android:hint="@string/password"
            android:drawableLeft="@drawable/ic_key"
            android:background="@drawable/shape2"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/dimen15"
            android:padding="@dimen/dimen15"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/textSize_20"
            android:layout_marginHorizontal="@dimen/dimen_40"/> 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_gravity="right"
            android:id="@+id/textViewForgotPass"
            android:text="@string/forgotPassword"      
            android:textStyle="bold"
            android:textSize="@dimen/textSize_15"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_5"/>

    
        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_50"
            android:id="@+id/buttonLogin"
            android:text="@string/loginButton"
            android:backgroundTint="@color/blue"
            app:cornerRadius="@dimen/dimen_50"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_20"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_gravity="center"/>
        
        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_50"
            android:id="@+id/buttonRegister"
            android:text="@string/registerButton"
            app:cornerRadius="@dimen/dimen_50"
            android:backgroundTint="@color/blue"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize_20"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orLoginWith"
            android:layout_gravity="center"
            android:id="@+id/textViewOrloginWith"
            android:textSize="@dimen/textSize_17"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_20">
        <ImageView
            android:layout_width="@dimen/dimen_65"
            android:layout_height="@dimen/dimen_55"
            android:id="@+id/imageViewFacebook"
            android:src="@drawable/facebook"/>
        <ImageView
                android:layout_width="@dimen/dimen_59"
                android:layout_height="@dimen/dimen_57"
                android:id="@+id/imageViewGoogle"
                android:src="@drawable/google"
                android:layout_marginLeft="@dimen/dimen_10"/>
        </LinearLayout>
        
</LinearLayout>
