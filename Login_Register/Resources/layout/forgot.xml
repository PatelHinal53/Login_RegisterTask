<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60"
        android:layout_marginLeft="@dimen/dimen_40"
        android:id="@+id/textViewForgot"
        android:text="@string/forgotPass"
        android:textSize="@dimen/textSize_35"
        android:textColor="@color/blue"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNewPass"
        android:hint="@string/newPass"
        android:drawableLeft="@drawable/ic_key"
        android:background="@drawable/shape2"
        android:inputType="textPassword"
        android:drawablePadding="@dimen/dimen15"
        android:fontFamily="sans-serif"
        android:padding="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen_60"
        android:layout_marginHorizontal="@dimen/dimen_40"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConfirmPass"
        android:hint="@string/confirmPass"
        android:layout_marginTop="@dimen/dimen_20"
        android:drawableLeft="@drawable/ic_key"
        android:background="@drawable/shape2"
        android:inputType="textPassword"
        android:drawablePadding="@dimen/dimen15"
        android:fontFamily="sans-serif"
        android:padding="@dimen/dimen15"
        android:layout_marginHorizontal="@dimen/dimen_40"/>              
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_50"
        android:id="@+id/buttonReset"
        android:text="@string/buttonReset"
        app:cornerRadius="@dimen/dimen_50"
        android:backgroundTint="@color/blue"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize_20"
        android:layout_marginTop="@dimen/dimen_60"
        android:layout_gravity="center"
    />               
</LinearLayout>
